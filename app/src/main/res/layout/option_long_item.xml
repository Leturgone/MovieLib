<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/editImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_edit_option" />

    <TextView
        android:id="@+id/editTextView"
        android:layout_width="85dp"
        android:layout_height="24dp"
        android:layout_toEndOf="@+id/editImageView"
        android:text="@string/edit_option" />
    <ImageView
        android:id="@+id/deleteImageView"
        android:layout_width="wrap_content"
        app:srcCompat="@drawable/ic_delete_option"
        android:layout_below="@+id/editImageView"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/deleteTextView"
        android:layout_width="85dp"
        android:layout_height="24dp"
        android:layout_below="@+id/editTextView"
        android:layout_toEndOf="@+id/deleteImageView"
        android:text="Удалить" />



</RelativeLayout>